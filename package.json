{
	"name": "fitness-tracker",
	"version": "1.0.0",
	"private": true,
	"scripts": {
		"test": "echo \"Error: no test specified\" && exit 1",
		"start": "concurrently \"npm run build:dev\" \"npm run start-server:dev\"",
		"build": "npm run build:prod",
		"build:dev": "webpack --mode development --config webpack.config.js",
		"build:prod": "webpack --mode production --config webpack.config.js && exit",
		"start-server:dev": "NODE_ENV=development nodemon src/server/index",
		"start-server:prod": "NODE_ENV=production pm2 start ./src/server/index.js --name LifTracker"
	},
